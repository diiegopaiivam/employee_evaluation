<% if @evaluationEmployee.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert"
        aria-hidden="true">×</button>
        <ul>
            <% @evaluationEmployee.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<div class="modal-header">
  <h4 class="modal-title" id="evaluationEmployeeLabel">
      Avalie <strong><%= @employee.name %></strong>
  </h4>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<form action="/evaluation_employee" method="post" accept-charset="UTF-8" >
<div class="modal-body">
  <form>
    <div class="form-group">
      <label for="evaluation_employee[grades]">Nota para atendimento</label>
      <input type="number" id="replyNumber" min="0" max="10" class="form-control" name="evaluation_employee[grades]" id="evaluation_employee[grades]"  placeholder="Digite uma nota">
    </div>
    <div class="form-group">
      <label for="evaluation_employee[comments]">Comentário</label>
      <textarea type="text-area" class="form-control" name="evaluation_employee[comments]" id="evaluation_employee[comments]"  rows="3" placeholder="Deixe um comentário para melhorarmos no nosso atendimento"></textarea>
    </div>
    <input type="hidden" value="<%= @employee.id%>" name="evaluation_employee[employee_id]" id="evaluation_employee[employee_id]">
</div>
<br/>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
  <button type="submit" class="btn btn-primary">Avaliar</button>
</div>
</form>
