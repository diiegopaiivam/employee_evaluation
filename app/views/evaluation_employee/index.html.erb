<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Avalie nossos Colaboradores</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ajude-nos a melhorar cada vez mais nosso atendimento
                </div>
                <div class="panel-body">
                    <div class="row" style="display:flex">
                        <% @employees.each do |employee| %>
                            <div class="card" style="max-width: 20rem; padding:16px; margin:24px; border:3px solid #f0f0f0;">
                                <% if employee.avatar.blank? %>
                                    <img class="card-img-top" src="/templates/gentelella/production/images/img.jpg" alt="Card image cap">
                                <% else %>
                                    <img class="card-img-top" src="<%= employee.avatar %>" alt="Card image cap" style="width:100%;max-width:130px;height:130px;object-fit:cover;">
                                <% end %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= employee.name %></h5>
                                    <p class="card-text"><%= employee.office %></p>
                                    <%= link_to 'Avaliar', show_modal_path(employee), :remote => true, :class => "btn btn-primary", 'data-toogle' => "modal", 'data-target' => "#evaluationEmployee" %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>

<!-- MODAL -->
<div class="modal fade" id="evaluationEmployee" tabindex="-1" role="dialog" aria-labelledby="evaluationEmployeeLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>

